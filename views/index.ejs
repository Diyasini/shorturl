<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <title>Url Shortener</title>
</head>
<style>
    body{
    background-color: rgb(201, 201, 241);
}
.container-fluid{
  padding-left: 600px;
}
section{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 50vh;
}

input{
    margin: 5px;
    height: 50px;
    border-radius: 10px;
}
.row{
    justify-content:center;
}

table{
    margin-left: 200px;
    width: 75%;
    
}

th , td{
    border: 2px solid black;
    padding: 2px;
}

td{
    padding: 10px;
}

h3{
  padding-left: 700px ;
  text-align: center;
}
.copy-text button:active{
  background: #809ce2;
}
.copy:before{
  content: "copied";
  position:relative;
  padding: 8px 10px;
  display: none;
}

.copy:after{
  content: "";
  position: relative;
  display: none;
}
.copy-text.active .copy:before
.copy-text.active .copy:after
{
  display: block;
}


</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <!--<a class="navbar-brand" href="#">Navbar</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Features</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Pricing</a>
              </li>
            </ul>
          </div> -->
          <h1 style="text-align: center;"> URL SHORTNER </h1>
        </div>
      </nav>
    <section id="shorten-body">
        <div class="container shortener">
            <form action="/shortUrls" method="post">
                <div class="row">
                    <input class="col-sm-6" type="text" name="fullUrl" id="fullUrl" placeholder="Enter a URL to shorten">
                    <input class="col-sm-2" type="submit" value="Shorten">
                </div>
            </form>
        </div>
    </section>
    <h3 class="navbar navbar-expand-lg navbar-light bg-light"> List of Links </h3>
    <table>

        <thead>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Clicks</th>
        </thead>
        <tbody>
           <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
            <script>
              function myfunction() {
                var copyText = document.getElementById("text");
             
                copyText.select();
                copyText.setSelectionRange(0, 9999);
             
                navigator.clipboard.writeText(copyText.a)
             
                alert("Copied the Text : " + copyText.a);
              }
             </script>
            <div class="copy-text"><td><a id="text" href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a>
            <button class="copy" onclick="myfunction()">Copy
              <i class="fa fa-clone"></i>
            </button>
            </td>
          </div> 
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
        </tbody>


    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>



</html>